int dreta = 0;
int a =+4;

void setup() {
  size(500,200);
}
void draw() {
  dreta=dreta+a;
  if(dreta>250){
    dreta=dreta+a+4;}
  if(dreta>500){
  a=-4;
  dreta=dreta+a;
  }
  if(dreta<250){
    dreta=dreta+a-4;}
  if(dreta<0){
   a=+4;
 dreta=dreta+a;
}
  fill(255,0,0);
  background(255);
  ellipse(dreta,100,50,50);
}
