int a;
int b;
int c;
int d;

void setup() {
  size(500,500);
}

void draw() {
  background(255);
  c=mouseX-a;
  d=mouseY-b;
  if(key=='r') {
    fill(255,0,0);
  }
  if(key=='b') {
    fill(0,0,255);
  }
  if(key=='g') {
    fill(0,255,0);
  }
  if(key=='w'){
    fill(255);
  }
  rect(a,b,c,d);
}

void mouseClicked() {
  a=mouseX;
  b=mouseY;
  
}
